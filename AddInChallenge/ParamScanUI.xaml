<Window x:Class="AddInChallenge.ParamScanUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddInChallenge"
             mc:Ignorable="d" 
             d:Height="265" d:Width="400" Width="400" Height="285">
    <Grid>
        <Label Content="Paramater Name:" HorizontalAlignment="Left" Margin="51,99,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.594,-2.042"/>
        <TextBox x:Name="ParameterName" HorizontalAlignment="Left" Height="22" Margin="200,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" ToolTip="Parameter Name to Search for"/>
        <Label Content="Paramater Value:" HorizontalAlignment="Left" Margin="51,138,0,0" VerticalAlignment="Top" Width="128" RenderTransformOrigin="0.594,-2.042"/>
        <TextBox x:Name="ParameterValue" HorizontalAlignment="Left" Height="22" Margin="200,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" ToolTip="Parameter Value to Search for"/>
        <Image x:Name="icon" HorizontalAlignment="Left" Height="50" Margin="170,34,0,0" VerticalAlignment="Top" Width="50" Source="filter_icon.png" RenderTransformOrigin="0.74,0.2" MinWidth="50" MinHeight="50" MaxWidth="50" MaxHeight="50" Stretch="None"/>
        <Button x:Name="Isolate" Content="Isolate In View" HorizontalAlignment="Left" Height="33" Margin="54,188,0,0" VerticalAlignment="Top" Width="122" Click="IsolateButton_Click"/>
        <Button x:Name="Select" Content="Select" HorizontalAlignment="Left" Height="33" Margin="222,188,0,0" VerticalAlignment="Top" Width="121" Click="SelectButton_Click"/>

    </Grid>
</Window>
